@model CarDealership.Models.Vehicle
<div class="container">
    <h2>Vehicle Details</h2>
    <br />
    <div class="col-md-12 newVehiclebox">
        <div class="row">
            <div class="col-md-3 text-center" id="ImageDiv">
                <div style="padding-top:2%">
                    <label id="year" style="padding-right:2%">2010</label><label id="make" style="padding-right:2%">@Model.Make</label><label id="model">@Model.Model</label>
                </div>
                <img src="~/@Model.Image" style="height:170px; width:auto; padding-top:2%;" />
            </div>
            <div class="col-md-3" style="text-align:center; padding-top:2%">
                <div>
                    <span><label style="padding-right:2%">Body Style:</label><label id="bodystyle">@Model.BodyStyle</label></span>
                </div>
                <br />
                <br />
                <div>
                    <span><label style="padding-right:2%">Trans:</label><label id="trans">@Model.Trans</label></span>
                </div>
                <br />
                <br />
                <div>
                    <span><label style="padding-right:2%">Color:</label><label id="color">@Model.Color</label></span>
                </div>
            </div>
            <div class="col-md-3" style="text-align:center; padding-top:2%">
                <div>
                    <span><label style="padding-right:2%">Interior:</label><label id="interior">@Model.Interior</label></span>
                </div>
                <br />
                <br />
                <div>
                    <span><label style="padding-right:2%">Mileage:</label><label id="mileage">@Model.IsNew</label></span>
                </div>
                <br />
                <br />
                <div>
                    <span><label style="padding-right:2%">VIN #:</label><label id="vin#">@Model.VinNumber</label></span>
                </div>
            </div>
            <div class="col-md-3" style="text-align:center; padding-top:5%">
                <div>
                    <span><label style="padding-right:2%">Sale Price:</label><label id="SalePrice">@Model.SalePrice</label></span>
                </div>
                <br />
                <br />
                <div>
                    <span><label style="padding-right:2%">MSRP:</label><label id="msrp">@Model.MSRP</label></span>
                </div>
                <br />
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 col-md-offset-3">
                <label>Details:</label><label>@Model.Description</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-10">
                <br />
                <div><a href="~/home/contact "class="btn btn-sm" style="color:black; border: 2px solid black; width:45%;">Contact</a></div>
            </div>
        </div>
    </div>
</div>